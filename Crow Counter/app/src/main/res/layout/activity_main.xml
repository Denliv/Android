<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65B168"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCrowCounter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#AB1414"
        android:text="Crows"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfCrows"
        app:layout_constraintEnd_toStartOf="@+id/numberOfCrows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numberOfCrows" />

    <TextView
        android:id="@+id/numberOfCrows"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#AB1414"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toEndOf="@+id/buttonCrowCounter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

    <Button
        android:id="@+id/buttonCatCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#AB1414"
        android:text="Cats"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfCats"
        app:layout_constraintEnd_toEndOf="@+id/buttonCrowCounter"
        app:layout_constraintStart_toStartOf="@+id/buttonCrowCounter"
        app:layout_constraintTop_toTopOf="@+id/numberOfCats" />

    <TextView
        android:id="@+id/numberOfCats"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#AB1414"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/numberOfCrows"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="@+id/numberOfCrows"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>